{
  "manifest_version": 3,
  "name": "VividAI - Meeting Transcriber & Summarizer",
  "version": "1.0.0",
  "description": "Automatically transcribe and summarize meetings from Google Meet, Zoom, Webex, WhatsApp and more with AI-powered insights",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "offscreen",
    "tabCapture",
    "notifications"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://*.webex.com/*",
    "https://web.whatsapp.com/*",
    "https://teams.microsoft.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://*.webex.com/*",
        "https://web.whatsapp.com/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "recorder/*", "bot/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
